{
	"manifest_version": 2,
	"name": "GoloAds",
	"description": "GoloAds - получайте деньги за просмотр рекламы!",
	"version": "0.0.3",
	"icons": {
		"128": "./images/icon.png"
	},
	"browser_action": {
		"default_icon": "./images/icon.png",
		"default_popup": "./popup.html"
	},
	"permissions": [
		"activeTab",
		"identity"
	],
	"oauth2": {
		"client_id": "570826800619-ta2fiot279mk015ab6kk0dg2n24hkvb0.apps.googleusercontent.com",
        "scopes": ["profile"]
	},
	"content_scripts" : [{
		"css" : ["./css/content_style.css"],
		"js": ["./scripts/content.js"],
		"matches" : ["*://*/*"]
	}]
}