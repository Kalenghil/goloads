{
	"manifest_version": 2,
	"name": "GoloAds",
	"description": "GoloAds - получайте деньги за просмотр рекламы!",
	"version": "0.0.1",
	"icons": {
		"128": "./images/icon.png"
	},
	"browser_action": {
		"default_icon": "./images/icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts" : [{
		"css" : ["./css/content_style.css"],
		"js": ["./scripts/content.js"],
		"matches" : ["http://*/*", "https://*/*"]
	}]
}